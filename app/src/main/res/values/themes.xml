<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gitly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- System color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Shapes. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Gitly.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Gitly.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Gitly.Large</item>
        <!-- Specs. -->
        <item name="emphasisLow">0.37</item>
        <item name="emphasisMid">0.67</item>
        <item name="emphasisHigh">0.87</item>
        <!-- Type. -->
        <item name="textAppearanceHeadline3">@style/Type.H3</item>
        <item name="textAppearanceHeadline4">@style/Type.H4</item>
        <item name="textAppearanceHeadline5">@style/Type.H5</item>
        <item name="textAppearanceHeadline6">@style/Type.H6</item>
        <item name="textAppearanceBody1">@style/Type.B1</item>
        <item name="textAppearanceBody2">@style/Type.B2</item>
        <item name="textAppearanceButton">@style/Type.Button</item>
        <item name="textAppearanceSubtitle1">@style/Type.S1</item>
        <item name="textAppearanceSubtitle2">@style/Type.S2</item>
        <item name="textAppearanceOverline">@style/Type.Overline</item>
        <!-- Input. -->
        <item name="textInputStyle">@style/Widget.Gitly.Input</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.Gitly.Input.AutoComplete</item>
        <!-- Indicator. -->
        <item name="currentPageIndicatorColor">@color/page_indicator_dark_selected</item>
        <item name="pageIndicatorColor">@color/page_indicator_dark</item>
        <!-- Others. -->
        <item name="collapsedTitleTextAppearance">?textAppearanceHeadline6</item>
        <item name="expandedTitleTextAppearance">?textAppearanceHeadline4</item>
        <item name="appBarLayoutStyle">@style/ThemeOverlay.Gitly.AppBar</item>
        <item name="materialButtonStyle">@style/Widget.Gitly.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Gitly.Card</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Gitly.Button.Outlined</item>
        <item name="chipGroupStyle">@style/Widget.Gitly.ChipGroup</item>
        <item name="chipStyle">@style/Widget.Gitly.Chip</item>
    </style>

    <!-- Register Theme. -->
    <style name="Theme.Gitly.Register">
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>