<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Cards. -->
    <style name="Widget.Gitly.Card" parent="Widget.MaterialComponents.CardView">
<!--        <item name="cardBackgroundColor">?pageIndicatorColor</item>-->
<!--        <item name="android:alpha">?emphasisLow</item>-->
    </style>

    <!-- Buttons. -->
    <style name="Widget.Gitly.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/spacing_large</item>
        <item name="iconGravity">end</item>
        <item name="android:paddingBottom">@dimen/spacing_large</item>
    </style>

    <style name="Widget.Gitly.Button.Outlined" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">@dimen/spacing_large</item>
        <item name="android:paddingBottom">@dimen/spacing_large</item>
        <item name="strokeColor">?colorSecondaryVariant</item>
        <item name="android:textColor">?colorSecondaryVariant</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?colorSecondaryVariant</item>
    </style>

    <!-- Input. -->
    <style name="Widget.Gitly.Input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearance">@style/ShapeAppearance.Gitly.Small.Input</item>
    </style>

    <!-- Chips. -->
    <style name="Widget.Gitly.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconVisible">true</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearance.MaterialComponents.SmallComponent
        </item>
        <item name="chipIconTint">?colorPrimaryVariant</item>
        <item name="chipStrokeColor">?pageIndicatorColor</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipEndPadding">@dimen/spacing_normal</item>
        <item name="chipStartPadding">@dimen/spacing_normal</item>
        <!-- <item name="chipBackgroundColor">?colorOnPrimary</item> -->
        <item name="checkedIconTint">?colorPrimaryVariant</item>
        <item name="android:textColor">?colorPrimaryVariant</item>
    </style>

    <style name="Widget.Gitly.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="singleLine">true</item>
        <item name="singleSelection">true</item>
    </style>

    <!-- Search. -->
    <style name="Widget.Gitly.Search" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:fillColor">?android:colorBackground</item>
        <item name="android:outlineProvider">none</item>
        <item name="itemFillColor">?android:colorBackground</item>
    </style>

    <!-- AppBar. -->
    <style name="ThemeOverlay.Gitly.AppBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">?android:colorBackground</item>
    </style>
</resources>