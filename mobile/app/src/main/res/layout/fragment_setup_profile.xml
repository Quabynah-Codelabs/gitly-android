<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.auth.SetupProfileFragment">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <dev.gitly.view.widget.util.InkPageIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginVertical="@dimen/spacing_xxlarge"
            android:layout_marginEnd="@dimen/spacing_xxlarge"
            app:currentPageIndicatorColor="?currentPageIndicatorColor"
            app:dotDiameter="8dp"
            app:dotGap="12dp"
            app:pageIndicatorColor="?pageIndicatorColor" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>